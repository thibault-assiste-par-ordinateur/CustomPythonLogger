{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(levelname)s|%(module)s|l.%(lineno)d] %(message)s"
    },
    "detailed": {
      "format": "[%(levelname)s|%(module)s|l.%(lineno)d] %(asctime)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json": {
      "()": "mylogger.MyJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },  
  "filters": {
    "no_errors": {
      "()": "mylogger.NonErrorFilter"
    }
  },
  "handlers": {
    "stdout": {
      "class": "mylogger.UTF8StreamHandler",
      "formatter": "simple",
      "level": "INFO",
      "stream": "ext://sys.stdout",
      "filters": ["no_errors"]
    },
    "stderr": {
      "class": "mylogger.UTF8StreamHandler",
      "level": "WARNING",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },
    "file_json": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/livegcode.log.jsonl",
      "maxBytes": 10000,
      "backupCount": 2,
      "encoding": "utf-8"
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": [
        "stderr",
        "stdout",
        "file_json"
      ],
      "respect_handler_level": true
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": [
        "queue_handler"
      ]
    }
  }
}